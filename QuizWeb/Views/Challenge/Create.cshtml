@model QuestionViewModel

<head>
    <meta charset="utf-8"/>
</head>

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>QuestionViewModel</h4>
        <hr/>
        @Html.ValidationSummary(true, "", new {@class = "text-danger"})
        <div class="form-group">
            @Html.LabelFor(model => model.Text, htmlAttributes: new {@class = "control-label col-md-2"})
            <div class="col-md-10">
                <textarea class = "form-control" id="Text" name="Text">@Model.Text</textarea>
                @Html.ValidationMessageFor(model => model.Text, "", new {@class = "text-danger"})
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.LevelId, htmlAttributes: new {@class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.LevelId, Model.Levels, new {htmlAttributes = new {@class = "form-control"}})
                @Html.ValidationMessageFor(model => model.LevelId, "", new {@class = "text-danger"})
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ThemeId, htmlAttributes: new {@class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.ThemeId, Model.Themes, new {htmlAttributes = new {@class = "form-control"}})
                @Html.ValidationMessageFor(model => model.ThemeId, "", new {@class = "text-danger"})
            </div>
        </div>

        <table class="table table-bordered">
            <tr>
                <th>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Answer1Text, htmlAttributes: new {@class = "control-label col-md-2"})
                        <div class="col-md-10">
                            <textarea class = "form-control" id="Answer1Text" name="Answer1Text" rows="1">@Model.Text</textarea>
                            @Html.EditorFor(model => model.Answer1)
                            @Html.ValidationMessageFor(model => model.Answer1Text, "", new {@class = "text-danger"})
                        </div>
                    </div>
                </th>
                <th>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Answer2Text, htmlAttributes: new {@class = "control-label col-md-2"})
                        <div class="col-md-10">
                            <textarea class = "form-control" id="Answer2Text" name="Answer2Text" rows="1">@Model.Text</textarea>
                            @Html.EditorFor(model => model.Answer2)
                            @Html.ValidationMessageFor(model => model.Answer2Text, "", new {@class = "text-danger"})
                        </div>
                    </div>
                </th>
            </tr>
            <tr>
                <th>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Answer3Text, htmlAttributes: new {@class = "control-label col-md-2"})
                        <div class="col-md-10">
                            <textarea class = "form-control" id="Answer3Text" name="Answer3Text" rows="1">@Model.Text</textarea>
                            @Html.EditorFor(model => model.Answer3)
                            @Html.ValidationMessageFor(model => model.Answer3Text, "", new {@class = "text-danger"})
                        </div>
                    </div>
                </th>
                <th>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Answer4Text, htmlAttributes: new {@class = "control-label col-md-2"})
                        <div class="col-md-10">
                            <textarea class = "form-control" id="Answer4Text" name="Answer4Text" rows="1">@Model.Text</textarea>
                            @Html.EditorFor(model => model.Answer4)
                            @Html.ValidationMessageFor(model => model.Answer4Text, "", new {@class = "text-danger"})
                        </div>
                    </div>
                </th>
            </tr>
            <tr>
                <th>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Answer5Text, htmlAttributes: new {@class = "control-label col-md-2"})
                        <div class="col-md-10">
                            <textarea class = "form-control" id="Answer5Text" name="Answer5Text" rows="1">@Model.Text</textarea>
                            @Html.EditorFor(model => model.Answer5)
                            @Html.ValidationMessageFor(model => model.Answer5Text, "", new {@class = "text-danger"})
                        </div>
                    </div>
                </th>
                <th>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Answer6Text, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            <textarea class="form-control" id="Answer6Text" name="Answer6Text" rows="1">@Model.Text</textarea>
                            @Html.EditorFor(model => model.Answer6)
                            @Html.ValidationMessageFor(model => model.Answer6Text, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </th>
            </tr>
        </table>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default"/>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>