@model ChallengeIndexViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @using (Html.BeginForm("Index", "Challenge", FormMethod.Get))
    {
        @Html.DropDownListFor(m => m.ThemeId, Model.Themes, new { htmlAttributes = new { @class = "form-control" } })
    }
</p>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Question
        </th>
        <th>
            Level
        </th>
        <th>
            ThemeId
        </th>
        <th></th>
    </tr>

@foreach (var item in Model.Questions) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Text)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.LevelId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ThemeId)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id })
        </td>
    </tr>
}

</table>
